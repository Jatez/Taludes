<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F2F4F4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:orientation="vertical">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/tablero"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/prueba"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:id="@+id/lbtCalcular"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:gravity="end"
            android:textSize="15dp"></TextView>

        <LinearLayout
            android:id="@+id/rticono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:background="@drawable/barra"
            android:gravity="center">

            <Button
                android:id="@+id/btnHistorial"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:background="@drawable/historial1"></Button>


            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/btnHerramientas"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/herramientas"></Button>

            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/btnResultados"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/resultados"></Button>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlOpciones"
                android:visibility="invisible">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HERRAMIENTAS"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lbtHerramientas"></TextView>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="LINEA"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btnLinea"
                    android:background="@drawable/barra"
                    android:layout_below="@id/lbtHerramientas"></Button>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="TALUD"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/barra"
                    android:id="@+id/btnTalud"
                    android:layout_below="@id/btnLinea"></Button>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlHistorial"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HISTORIAL"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:id="@+id/lbtHistorial"></TextView>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>